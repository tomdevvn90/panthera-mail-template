<mjml>
  <mj-head>
    <mj-attributes>
      <mj-text padding="0" font-size="16px" line-height="22px" />
      <mj-all font-family="Arial" />
      <mj-class name="fullwidth-button" width="100%" padding="8px" font-weight="bold" font-size="16px" />
    </mj-attributes>
    <mj-style>
      @media(max-width: 479px) {
        .child-item-inline {
          margin-bottom: 15px;
        }

        .image-center-on-mobile > * {
          margin-bottom: 20px;
        }

        .center-on-mobile * {
          text-align: center;
          margin: 0 auto;
        }
      }
    </mj-style>
    <mj-style inline="inline">
      .child-item-inline * {
        vertical-align: middle;
      }

      .child-item-inline a {
        text-decoration: none;
      }

      .list-data {
        margin: 0;
        padding: 0
      }

      .list-data li {
        list-style: none;
        margin-bottom: 15px;
      }

      .list-data li strong {
        display: inline-block;
        width: 45%;
      }

      .contact-list {
        margin: 0;
        padding: 0;
      }

      .contact-list li {
        display: flex;
        align-items: center;
        color: white;
        font-weight: 600;
      }

      .contact-list li span {
        display: inline-block;
        margin-right: 15px
      }

      .contact-list img {
        width: 24px;
        height: auto;
      }

      .contact-list li a {
        color: #94D4FF;
        text-decoration: none;
      }

      .__thin {
        font-weight: 300;
        color: rgba(255,255,255,.9);
      }

      .bottom-message {
        display: flex;
        align-items: center;
        color: #00D0B8;
        font-weight: bold;
        justify-content: center;
      }

      .bottom-message img {
        margin-right: 20px;
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#E3EDF7">
    <mj-include path="./the-header.mjml" />
    <mj-section>
      <mj-column>
      </mj-column>
    </mj-section>
    <mj-section background-url="https://tomdevvn90.github.io/panthera-mail-template/images/background-heading.jpg" border-radius="14px 14px 0 0">
      <mj-column vertical-align="middle">
        <mj-image src="https://tomdevvn90.github.io/panthera-mail-template/images/Logo-POSITIVE.png" />
      </mj-column>
      <mj-column vertical-align="middle">
        <mj-button background-color="#15fcdb" color="#244556" font-weight="bold">
          <multiline>Manage My Account Online</multiline>
        </mj-button>
      </mj-column>
    </mj-section>
    <mj-section background-color="#006CB3">
      <mj-column>
        <mj-text align="center" color="white" font-weight="bold">
          <div class="child-item-inline">
            <img src="https://tomdevvn90.github.io/panthera-mail-template/images/sms.png" style="margin-right: 5px;"/> 
            <a style="color: white" href="tel:0480009000"><multiline>0480 009 000</multiline></a>
          </div>
        </mj-text>
      </mj-column>
      <mj-column>
        <mj-text align="center" color="white" font-weight="bold">
          <div class="child-item-inline">
            <img src="https://tomdevvn90.github.io/panthera-mail-template/images/chat.png" style="margin-right: 5px;"/> 
            <a style="color: white" href="#"><multiline>Web Chat</multiline></a>
          </div>
        </mj-text>
      </mj-column>
      <mj-column>
        <mj-text align="center" color="white" font-weight="bold">
        <div class="child-item-inline">
